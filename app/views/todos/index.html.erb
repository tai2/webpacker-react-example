<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td>
          <% if todo.done %>
            <img class="check" src="<%= asset_pack_path 'check-square-o.svg' %>" />
          <% else %>
            <img class="check" src="<%= asset_pack_path 'square-o.svg' %>" />
          <% end %>
          <%= todo.content %>
        </td>
        <td><%= todo.due_date %></td>
        <td><%= link_to 'Show', todo, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: 'btn btn-default' %>
